algoritmo "UMA PARTIDA DE FUTEBOL"
var
   g1, g2, gols inteiro
inicio

      Escreva("   FORTALEZA X CEARÁ   ")
      Escreva("-----------------------")
      Escreva("Quantos gols o Ceará fez? ")
      Leia(g1)
      Escreva("Quantos gols o Fortaleza fez? ")
      Leia(g2)
      Escolha gols
              caso g1 = g2
              gols <- 0
              caso
      fimescolha
fimalgoritmo