algoritmo "EXERCICIO 10"
var
   N1, N2, A: real
inicio

      Escreva("Qual a Largura da Parede? ")
      Leia(N1)
      Escreva("Qual a Altura da Parede? ")
      Leia(N2)
      A <- N1*N2
      Escreval("A area total da sua parede é de: ",A,"m")
      Escreva("Você irá precisar de ",(A/2)," litros de tinta ")

fimalgoritmo