algoritmo "EXERCICIO 8"
var
   M: real
inicio
   Escreva("Digite uma distancia em metros: ")
   Leia(M)
   Escreval("A distancia de ",M,"m corresponde a: ")
   Escreval((M/1000),"km")
   Escreval((M/100),"hm")
   Escreval((M/10),"Dam")
   Escreval((M*10),"dm")
   Escreval((M*100),"cm")
   Escreval((M*1000),"mm")
fimalgoritmo